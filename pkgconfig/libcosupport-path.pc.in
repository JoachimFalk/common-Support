# Common information
PACKAGE=@PACKAGE@
PACKAGE_VERSION=@PACKAGE_VERSION@

# Installation information
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@

# Information for source tree mode (this is deleted if this pkg-config file was installed)
srctreemode_srcdir=@abs_top_srcdir@
srctreemode_builddir=@abs_top_builddir@
srctreemode_libdir=${srctreemode_builddir}
srctreemode_includedir=${srctreemode_srcdir}/src/cosupport-path/headers

# pkg-config fields
# human-readable name
Name: libcosupport-path
# human-readable description
Description: Library of supporting infrastructure of the chair of HW/SW CoDesign at Uni Erlangen
Version: @PACKAGE_VERSION@
URL: http://www12.informatik.uni-erlangen.de/research/systemoc
#Conflicts: foobar <= 4.5
Requires: libcosupport-base = ${PACKAGE_VERSION}
#Requires.private:
Libs: -L${srctreemode_libdir} @BOOST_LDFLAGS@ ${srctreemode_libdir}/libcosupport-path.la -lboost_filesystem@BOOST_LIBMTPOSTFIX@ -lboost_system@BOOST_LIBMTPOSTFIX@
Libs.private:
Cflags: @AM_CPPFLAGS@ @AM_CXXFLAGS@ -I${srctreemode_includedir} @BOOST_INCLUDE@
